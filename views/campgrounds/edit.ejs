<% include ../partials/header %>
<div class="container">
	<div class="row justify-content-center">
		<h1 class="pt-4">Edit <%=campground.name%></h1>
	</div>
	<div class="row justify-content-center">
		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
			<div class="form-group pt-2"><input type="text" name="campground[name]" value="<%=campground.name%>"></div>
			<div class="form-group"><input type="text" name="campground[image]" value="<%=campground.image%>"></div>
			<div class="form-group"><input type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01"></div>
			<div class="form-group"><input type="text" name="campground[description]" value="<%=campground.description%>"></div>
			<div class="form-group"><button type="submit" class="btn btn-primary btn-block">Submit!</button></div>
			<div class="form-group"><a href="/campgrounds">Go Back</a></div>
		</form>
	</div>
</div>
	

<% include ../partials/footer %>