<% include ../partials/header %>

<div class="container">
	<div class="row justify-content-center">
		<h1 class="pt-4">Create a new campground</h1>
	</div>
	<div class="row justify-content-center">
		<form action="/campgrounds" method="POST">
			<div class="form-group pt-2"><input type="text" name="name" placeholder="name"></div>
			<div class="form-group"><input type="text" name="image" placeholder="image url"></div>
			<div class="form-group"><input type="number" name="price" placeholder="price" min="0.01" step="0.01"></div>
			<div class="form-group"><input type="text" name="description" placeholder="description"></div>
			<div class="form-group"><button type="submit" class="btn btn-primary btn-block">Submit!</button></div>
			<div class="form-group"><a href="/campgrounds">Go Back</a></div>
		</form>
	</div>
</div>
	

<% include ../partials/footer %>